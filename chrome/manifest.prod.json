{
  "version": "0.0.1",
  "name": "remit-assistant",
  "manifest_version": 2,
  "description": "remit assistant",
  "browser_action": {
    "default_title": "remit-assistant",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "inject.html"
  ],
  "background": {
    "page": "background.html"
  },
  "permissions": [ "contextMenus", "tabs", "storage", "https://remit.zgr.sg/en/calculator/*", "https://remit.zgr.sg/zh-hans/calculator/*"],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
